{
  "routes": [
    {
      "route": "/api/*",
      "methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "TRACE",
        "PATCH"
      ],
      "rewrite": "/api/*" // Certifique-se de que o prefixo da API est√° correto
    },
    {
      "route": "/app/*", // Rotas do frontend para o React
      "rewrite": "/index.html"
    },
    {
      "route": "/*", // Tratamento para outras rotas
      "statusCode": 404
    }
  ]
}
